<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="5dp">
    <com.example.news.Bean.MyImageView
        android:id="@+id/fd_iv_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:src="@mipmap/ic_launcher_round"/>
    <TextView
        android:id="@+id/fd_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="姓名"
        android:textColor="@color/colorAccent"
        android:textSize="18dp"
        android:layout_toEndOf="@id/fd_iv_image" />

    <TextView
        android:id="@+id/fd_tv_qianming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/fd_iv_image"
        android:layout_below="@id/fd_tv_name"
        android:text="在这个世界，还存在着..."
        android:textSize="14dp" />
</RelativeLayout>
